<Window x:Class="Stationery.Img"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stationery"
        mc:Ignorable="d" IsVisibleChanged="Window_IsVisibleChanged"
        Title="Звгрузка фото" Height="500" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <ListBox x:Name="lbox_goods" Width="200" Height="200"></ListBox>
            <Button x:Name="btn_img" Width="200" Height="50" Click="btn_img_Click" Content="Добавить фото" Style="{StaticResource btn_style}" Margin="0 10 0 0"></Button>
            <Button x:Name="btn_save" Width="200" Height="50" Click="btn_save_Click" Content="Сохранить" Style="{StaticResource btn_style}" Margin="0 10 0 0"></Button>
        </StackPanel>
    </Grid>
</Window>
